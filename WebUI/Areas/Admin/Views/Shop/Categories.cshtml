@model IEnumerable<WebUI.Areas.Admin.Models.CategoryVM>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>

<div class="nw-cat">
    <div class="input-group mb-3">
        <div class="input-group-append">
            <span class="input-group-text" id="inputGroup-sizing-default">Category Name</span>
        </div>
        <input type="text" id="newcatname" class="form-control" />
    </div>
    <p>
        <a href="#" id="necatname" class="btn btn-success">Add a new category</a>
        <span class="ajax-text">
            <img src="~/Images/ajax-loader.gif" height="50" />
        </span>
    </p>
</div>

@if (!Model.Any())
{
    <h1 class="text-center">There are no categories.</h1>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.EditorFor(modelItem => item.Name, new { htmlAttributes = new { @class = "form-control ", @readonly = "readonly" } })
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteCategory", new { id = item.Id }, new { @class = "dalete btn btn-danger" })
                </td>
            </tr>
        }
    </table>
}
@section Scripts
{
    <script>
        $(function () {

            /* Add new category */
        /*---------------------------------------*/
            /* Confirm Page deletion */
            $("a.delete").click(function () {
                if (!confirm("Confirm Category deletion")) return false;
            });
            /*---------------------------------------*/
            /* Sorting script */
            $("table#pages tbody").sortable({
                items: "tr:not(.home)",
                placeholder: "ui-state-highlight",
                update: function () {
                    var ids = $("table#pages tbody").sortable("serialize");
                    var url = "/Admin/Pages/ReorderPages";

                    $.post(url, { ids });
                }
            });
        });

    </script>
}

