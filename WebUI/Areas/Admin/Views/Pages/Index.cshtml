@model IEnumerable<WebUI.Areas.Admin.Models.PageVM>

@{
    ViewData["Title"] = "Pages";
}
<h1>Pages</h1>
@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}
<p>
    @Html.ActionLink("Create New Page", "AddPage", null, null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Slug
            </th>
            <th>
                Sidebar
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Slug)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HasSidebar)
                </td>
                <td>
                    @Html.ActionLink("Edit Page", "EditPage", new { id = item.Id }) |
                    @Html.ActionLink("Page Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete Page", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
