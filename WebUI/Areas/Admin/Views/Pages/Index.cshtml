@model IEnumerable<WebUI.Areas.Admin.Models.PageVM>

@{
    ViewData["Title"] = "Pages";
}
<h2>Pages</h2>
<hr />
@if (TempData["SM"] != null)
{
    <div class="alert alert-success">
        @TempData["SM"]
    </div>
}
<p>
    @Html.ActionLink("Create New Page", "AddPage", null, null, new { @class = "btn btn-success" })
</p>
<table class="table sorting" id="pages">
    <tr class="home">
        <th>
            Title
        </th>
        <th>
            Slug
        </th>
        <th>
            Sidebar
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr id="id_@item.Id" class="@item.Slug">
            <td>
                @if (item.Slug != "home")
                {
                    <span class="ui-icon ui-icon-arrow-2-n-s"></span>
                }
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasSidebar)
            </td>
            <td>
                @Html.ActionLink("Edit Page", "EditPage", new { id = item.Id }) |
                @Html.ActionLink("Page Details", "PageDetails", new { id = item.Id })
                <!-- Если slug=="home", не показывать кнопку удаления-->
                @if (item.Slug != "home")
                {
                    string slash = "| ";
                    @slash
                    @Html.ActionLink("Delete Page", "DeletePage", new { id = item.Id }, new { @class = "delete" })

                }
            </td>
        </tr>
    }
</table>
@section Scripts
{
    <script src="~/js/PagesIndexView.js"></script>
}
